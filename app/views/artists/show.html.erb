<!-- app/views/artists/show.html.erb -->
<h1 class="page-header"><%= @artist.name %></h1>
<h3><%= @artist.albums(country: 'US').map { |album| album.tracks }.flatten.inject(0) { |sum, track| sum + track.duration_ms } / 1000 / 60 / 60 %> hours total</h3>
<% @artist.albums(country: 'US').each do |album| %>
  <h3><%= album.name %></h3>
  <ul>
    <% album.tracks.each do |track| %>
      <li>
        <%= track.name %>
      </li>
    <% end %>
  </ul>
<% end %>
